rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Buses: lectura pública, escritura para drivers autenticados
    // TEMPORAL: permitir escrituras sin auth para modo demo/desarrollo
    // TODO: En producción, revertir a requerir auth + role driver
    match /buses/{busId} {
      allow read: if true;
      // PRODUCCIÓN (comentado temporalmente):
      // allow write: if request.auth != null && (request.auth.token.role == 'driver' || request.auth.token.admin == true);
      
      // DESARROLLO/DEMO (permitir escrituras sin auth):
      allow write: if true;
    }

    // Por defecto, denegar
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

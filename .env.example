# =============================================================================
# BUSNOW - CONFIGURACIÓN DE VARIABLES DE ENTORNO
# =============================================================================

# GOOGLE MAPS API
# Obtén tu API Key desde: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# FIREBASE CONFIGURATION
# Obtén estos valores desde: https://console.firebase.google.com/
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id_here
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# CONFIGURACIÓN DE LA APLICACIÓN
APP_NAME=BusNow
APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENV=development

# CONFIGURACIÓN DE TRACKING
# Intervalo de actualización de ubicación en milisegundos (ej: 5000 = 5 segundos)
EXPO_PUBLIC_LOCATION_UPDATE_INTERVAL=5000
# Distancia mínima en metros para actualizar ubicación
EXPO_PUBLIC_LOCATION_MIN_DISTANCE=10